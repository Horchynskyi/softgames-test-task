{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitReturns": true,
		"alwaysStrict": true,
		"noFallthroughCasesInSwitch": true,
		"incremental": true,
		"module": "esnext",
		"lib": ["esnext", "DOM"],
		"removeComments": true,
		"sourceMap": true,
		"target": "ES6",
		"noErrorTruncation": true,
		"importHelpers": false,
		"allowJs": true
	},
	"include": ["./globals.d.ts", "js/**/*", "static"]
}
